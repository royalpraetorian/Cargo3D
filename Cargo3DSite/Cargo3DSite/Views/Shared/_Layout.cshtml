<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Cargo3D</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="icon" type="image/x-icon" href="~/LogoDone.ico" />
</head>
<body>
    <div class="fixed-top">
        <label id="currentPage"> @*page name*@</label>
        <a href='@Url.Action("Index", "Home")'>
            <img id="cargoLogo" src="~/Images/LogoDone.png" />
        </a>
        <div class="login">
            @Html.Partial("_LoginPartial")
        </div>
    </div>
    <div class="navbar navbar-dark bg-dark fixed-top navbar-expand-md">
        <div class="container">
            <div class="header_box navbar-header">
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="nav-item">@Html.ActionLink("Home", "Index", "Home")</li>
                    <li class="nav-item">@Html.ActionLink("Catalogue", "Catalogue", "Home")</li>
                    <li class="nav-item">@Html.ActionLink("Creator", "Creator", "Home")</li>
                    @*if the user is registered*@
                    <li class="nav-item">@Html.ActionLink("Add Item", "AddItem", "Item")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; Cargo3D</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
